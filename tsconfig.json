{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "outDir": "dist/",
    "sourceMap": true,
    "types": ["chai", "mocha"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["/node_modules", "**/*.spec.ts"]
}
